<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1553451133-8083c47243d6?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2834&q=80);">
  <div class="container text-center">
    <h1><span id="banner-typed-text"></span></h1>
    <p>Choose a recipe or build your own!</p>
    <%= link_to 'Add a new cocktail', new_cocktail_path, class: "btn btn-warning btn-lg" %>
  </div>
</div>

<div class="container text-center mt-5">
  <div class="cards d-flex flex-wrap justify-content-around">
    <% @cocktails.each do |cocktail| %>
      <div class="card mb-5" style="width: 18rem">
        <%= cl_image_tag cocktail.photo.key, crop: :fill, class: 'card-img-top' %>
        <div class="card-body">
          <h5 class="card-title"><%= cocktail.name %></h5>
          <%= link_to 'Choose recipe', cocktail_path(cocktail), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>

</div>
